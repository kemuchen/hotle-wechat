<!--pages/service/service.wxml-->
<!-- 无可入住房间 -->
<view class="container">
  <view class="no-room">
    <view class="top-line">
      <!-- 全部订单 -->
      <view class="all-orders" bindtap="navigateToOrder">
        <view>
          <image class="order-image" src="{{orderImg}}"></image>
        </view>
        <view class="all-orders-text">全部订单</view>
      </view>
    </view>

    <!-- 暂无可入住信息 -->
    <view class="no-adviced-room">今天暂无可入住房间，快去预定吧</view>

    <!-- 预定房间 -->
    <button class="advince-room" bindtap="navigateToSearch">
      去订房
    </button>
  </view>

  <view class="no-room">
    <view class="top-line">
      <!-- 全部订单 -->
      <view class="all-orders" bindtap="navigateToOrder">
        <view>
          <image class="order-image" src="{{orderImg}}"></image>
        </view>
        <view class="all-orders-text">全部订单</view>
      </view>
    </view>

    <!-- 暂无可入住信息 -->
    <view class="no-adviced-room">您即将入住</view>
    <view class="no-adviced-room">梦幻珊瑚-智能套房201（原价288元）</view>
    <view class="no-adviced-room" style="font-size: 20rpx;">入离时间：06.29 22:24-06.30 12:00</view>

    <!-- 预定房间 -->
    <button class="advince-room" bindtap="navigateToBlrz">
      办理入住
    </button>
  </view>

  <!-- 智能开门 -->
  <view class="znkm-box">
    <view class="znkm-title">
      <view class="znkm-title-text">智能开门</view>
      <view class="znkm-title-tips">您尚未办理入住，入住后可使用智能开门</view>
    </view>
    <gongge routers="{{znkmRoutes}}" columns="4"></gongge>
  </view>

  <!-- 在住服务 -->
  <view class="znkm-box">
    <view class="znkm-title">
      <view class="znkm-title-text">在住服务</view>
    </view>
    <gongge routers="{{zzfwRouters}}" columns="3" bindclickItem="clickZzfwItem"></gongge>
  </view>
</view>