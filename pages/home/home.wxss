/* pages/home/home.wxml.wxss */
/* 轮播图片样式 */
.slide-image {
  width: 100%;
  height: 300rpx;
  z-index: 1;
}

/* 搜索条件 */
.search {
  background-color: #ffffff;
  margin-top: -50px;
  width: 90%;
  margin-left: 5%;
  height: 250px;
  border-radius: 5px;
  box-shadow:0px 1px 1px 1px #E2DAD5;
  position:relative;
  z-index: 2;
}

/* 入住类型 */
.search-rzlx {
  display: flex;
  width: 90%;
  height: 50px;
  margin-left: 5%;
  flex-direction: row;
  justify-content: center;
  border-bottom: 1px solid #C2B6AE;
  align-items: center;
}

.search-rzlx-item {
  width: 33%;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search-item-icon {
  margin-right: 6px;
  width: 15px;
  height: 15px;
}

.search-location {
  display: flex;
  width: 90%;
  height: 50px;
  margin-left: 5%;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1px solid #C2B6AE;
  align-items: center;
  font-size: 32rpx;
}

.search-rzsj {
  margin-top: 10px;
  display: flex;
  margin-left: 5%;
  height: 80px;
  align-content: space-around;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.search-rzsj-item-sj {
  width: 45%;
  height: 80px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.search-rzsj-item-ts {
  width: 10%;
  height: 80px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.search-rzsj-item-rz {
  align-content: center;
  font-size: 30rpx;
  color: #A6A4A2;
}

.search-rzsj-item-rq {
  align-content: center;
  font-size: 30rpx;
  color: #ea9518;
}

.search-rzsj-item-week {
  align-content: center;
  font-size: 20rpx;
  color: #000;
}

.searchButton {
  width: 90%;
  color: #ffffff;
  height: 35px;
  margin-top: 10px;
  font-size: 35rpx;
  background-color: #ea9518;
}

.calendar-box {
  position: absolute;
  bottom: 0px;
  z-index: 1000;
  background:rgba(0,0,0,0.5);
  height: 100%;
  width: 100%;
}

.calendar {
  position: absolute;
  background-color: #ffffff;
  bottom: 0px;
  width: 100%;
}

.calendar-cancel {
  display: flex;
  width: 100%;
  height: 40px;
  padding-left: 10px;
  margin-bottom: 10px;
  border-bottom: 1px solid #C2B6AE;
  font-size: 30rpx;
  align-items: center;
}
