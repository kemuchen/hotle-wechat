/* pages/order/order.wxss */
page{
  background-color: #f5f5f5;
}

.orderlist-box {
  width: 100%;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  background-color: #ffffff;
  margin-bottom: 5px;
}

.order-item {
  width: 95%;
  height: 180px;
}

.order-item-title {
  width: 100%;
  height: 30px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-item-title-fjmc {
  font-size: 35rpx;
  font-weight: bold;
  display: flex;
  align-content: center;
}

.order-item-title-ddzt {
  font-size: 25rpx;
  color: #e6e6e6;
  display: flex;
  align-content: center;
}


.order-item-info {
  width: 100%;
  height: 110px;
  display: flex;
  justify-content: start;
  border-bottom: 1rpx solid #e6e6e6;
}

.order-item-info-image {
  width: 50%;
  height: 100px;
}

.order-item-info-image-image {
  width: 100%;
  height: 100px;
}

.order-item-info-info {
  margin-left: 10px;
  display: flex;
  height: 100px;
  flex-direction: column;
  justify-content: space-between;
}

.order-item-info-fjxx {
  font-size: 28rpx;
  color: bfbfbf;
}

.order-item-info-fyxx {
  font-size: 30rpx;
  color: #000;
  font-weight: bold;
}

.order-item-oper {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  margin-top: 10px;
}

.order-item-oper-btn {
  margin-left: 10px;
  height: 20px;
  border: 1rpx solid #A6A6A6;
  color: #8F8B87;
  font-size: 25rpx;
  border-bottom-left-radius: 10px;
  border-top-left-radius: 10px;
  border-bottom-right-radius: 10px;
  border-top-right-radius: 10px;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}