.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 10;
  box-sizing: border-box;
} 

.right-arrow {
  margin-left: 5px;
  width: 10px;
  height: 10px;
}

.common-btn {
  width: 90%;
  color: #ffffff;
  height: 35px;
  margin-top: 10px;
  font-size: 35rpx;
  background-color: #ea9518;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 5px;
}

